<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/misc_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <!-- Spoof -->
    <Preference
        android:key="spoofing"
        android:title="@string/spoofing_title"
        android:fragment="com.android.settings.awaken.fragments.Spoof" />

    <!-- Ignore secure window feature  -->
    <com.awaken.support.preferences.SecureSettingSwitchPreference
        android:key="window_ignore_secure"
        android:title="@string/ignore_window_secure_title"
        android:summary="@string/ignore_window_secure_summary"
        android:defaultValue="false"/>

    <!-- Pie animation  -->
    <com.awaken.support.preferences.GlobalSettingSwitchPreference
        android:key="pie_animation_style"
        android:title="@string/pie_animation_style_title"
        android:summary="@string/pie_animation_style_summary"
        android:defaultValue="true" />

    <!-- Cache Cleaner -->
    <com.awaken.support.preferences.SystemSettingSwitchPreference
        android:key="cache_cleaner_enabled"
        android:title="@string/cache_cleaner_title"
        android:summary="@string/cache_cleaner_summary"
        android:defaultValue="false" />      
</PreferenceScreen>